@page "/myorders"
@using BlazingPizza.Model
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<h2>My Orders</h2>

@if (ordersWithStatus == null)
{
    <p>Loading...</p>
}
else if (!ordersWithStatus.Any())
{
    <p>No orders placed yet.</p>
    <a class="btn btn-success" href="/">Order some pizza</a>
}
else
{
    <div class="list-group orders-list">
        @foreach (var item in ordersWithStatus)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="col">
                    <h5>@item.Order.CreatedTime.ToLongDateString()</h5>
                    Items: <strong>@item.Order.Pizzas.Count</strong><br />
                    Total: <strong>ZWL @item.Order.GetFormattedTotalPrice()</strong>
                </div>

                <div class="col">
                    Status: <strong>@item.StatusText</strong>
                </div>

                @if (item.StatusText != "Delivered")
                {
                    <div class="col flex-grow-0">
                        <a class="btn btn-success"
                           href="@($"/myorders/{item.Order.OrderId}")">
                            Track &gt;
                        </a>
                    </div>
                }
            </div>
        }
    </div>
}

@code {
    private List<OrderWithStatus>? ordersWithStatus;

    protected override async Task OnInitializedAsync()
    {
        ordersWithStatus =
            await HttpClient.GetFromJsonAsync<List<OrderWithStatus>>(
                $"{NavigationManager.BaseUri}orders");
    }
}